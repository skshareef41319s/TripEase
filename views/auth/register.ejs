<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Register | TripEase</title>

  <!-- Bootstrap & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
  <link href="https://fonts.googleapis.com/css2?family=Pacifico&family=Poppins:wght@400;600&display=swap" rel="stylesheet"/>

  <style>
    body {
      background: linear-gradient(135deg, #e0f7fa, #f0f4f8);
      font-family: 'Poppins', sans-serif;
      height: 100vh;
      margin: 0;
      display: flex;
      justify-content: center;
      align-items: center;
      padding: 1rem;
      position: relative;
      overflow: hidden;
    }

    /* Bubble Background Animation */
    .bg-animate {
      position: absolute;
      top: 0; left: 0;
      width: 100%; height: 100%;
      overflow: hidden;
      z-index: -1;
    }
    .bg-animate span {
      position: absolute;
      display: block;
      background: rgba(0, 123, 255, 0.18);
      border-radius: 50%;
      animation: move 14s ease-in-out infinite;
      filter: blur(1px);
      opacity: 0;
    }
    .bg-animate span:nth-child(1) { left: 10%; width: 60px; height: 60px; animation-duration: 15s; }
    .bg-animate span:nth-child(2) { left: 25%; width: 35px; height: 35px; animation-duration: 12s; animation-delay: 2s; }
    .bg-animate span:nth-child(3) { left: 40%; width: 80px; height: 80px; animation-duration: 18s; animation-delay: 4s; }
    .bg-animate span:nth-child(4) { left: 55%; width: 25px; height: 25px; animation-duration: 13s; animation-delay: 6s; }
    .bg-animate span:nth-child(5) { left: 70%; width: 50px; height: 50px; animation-duration: 16s; animation-delay: 3s; }
    .bg-animate span:nth-child(6) { left: 85%; width: 40px; height: 40px; animation-duration: 20s; animation-delay: 1s; }
    .bg-animate span:nth-child(7) { left: 95%; width: 20px; height: 20px; animation-duration: 11s; animation-delay: 5s; }

    @keyframes move {
      0% { transform: translateY(110vh) scale(0.6); opacity: 0; filter: brightness(1) blur(1px); }
      15% { opacity: 0.8; }
      50% { opacity: 1; filter: brightness(1.2) blur(1px); }
      85% { opacity: 0.6; filter: brightness(1.4) blur(1.5px); }
      100% { transform: translateY(-10vh) scale(1.2); opacity: 0; filter: brightness(1.6) blur(2px); }
    }

    /* Logo */
    .brand-text {
      font-family: 'Pacifico', cursive;
      position: absolute;
      top: 25px;
      left: 30px;
      font-size: 2.3rem;
      font-weight: 800;
      color: #007bff;
      letter-spacing: 2px;
      user-select: none;
      z-index: 10;
    }

    .glass-card {
      background: rgba(255, 255, 255, 0.25);
      backdrop-filter: blur(16px);
      border-radius: 1.5rem;
      padding: 2.5rem 2rem;
      width: 100%;
      max-width: 420px;
      box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
      animation: fadeInUp 0.7s ease;
      z-index: 1;
    }

    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(25px); }
      to   { opacity: 1; transform: translateY(0); }
    }

    h3 {
      font-weight: 700;
      color: #1d3557;
      margin-bottom: 2rem;
      text-align: center;
    }

    /* Floating Labels */
    .form-floating .form-control {
      border-radius: 0.6rem;
      padding: 1rem 1.2rem;
      font-size: 1rem;
    }

    .form-floating label {
      transition: 0.3s ease all;
      font-size: 0.95rem;
      color: #777;
    }

    .form-floating .form-control:focus ~ label,
    .form-floating .form-control:not(:placeholder-shown) ~ label {
      transform: translateY(-0.7rem) scale(0.85);
      color: #2a9d8f;
    }

    .form-control:focus {
      border-color: #2a9d8f;
      box-shadow: 0 0 0 0.2rem rgba(42, 157, 143, 0.25);
    }

    .btn-primary {
      background-color: #2a9d8f;
      border: none;
      border-radius: 2rem;
      padding: 0.65rem;
      font-weight: 600;
      font-size: 1rem;
      transition: transform 0.25s ease, background-color 0.3s ease;
    }

    .btn-primary:hover {
      background-color: #1e7f74;
      transform: translateY(-2px);
    }

    .alert {
      font-size: 0.95rem;
      font-weight: 500;
      padding: 0.75rem 1rem;
      border-radius: 0.75rem;
      border-left: 5px solid #ff4d4f;
      background-color: #ffe5e5;
      color: #d32f2f;
      animation: fadeInDown 0.5s ease;
      margin-bottom: 1rem;
    }

    .login-link {
      font-size: 0.9rem;
      text-align: center;
      margin-top: 1.3rem;
    }

    .login-link a {
      color: #007bff;
      text-decoration: none;
      font-weight: 500;
      transition: color 0.2s;
    }

    .login-link a:hover {
      text-decoration: underline;
      color: #0056b3;
    }

    .eye-icon {
      position: absolute;
      right: 1.2rem;
      top: 50%;
      transform: translateY(-50%);
      cursor: pointer;
      color: #888;
      z-index: 10;
    }

    .spinner {
      display: none;
      width: 18px;
      height: 18px;
      border: 3px solid white;
      border-top: 3px solid transparent;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin-left: 8px;
    }

    @keyframes spin {
      0% { transform: rotate(0); }
      100% { transform: rotate(360deg); }
    }
  </style>
</head>

<body>
  <!-- Bubble Background -->
  <div class="bg-animate">
    <span></span><span></span><span></span><span></span>
    <span></span><span></span><span></span>
  </div>

  <!-- Brand -->
  <div class="brand-text">TripEase</div>

  <!-- Register Card -->
  <div class="glass-card">
    <h3><i class="fas fa-user-plus me-2 text-primary"></i> Create Account</h3>

    <% if (error) { %>
      <div class="alert" role="alert">
        <i class="fas fa-exclamation-circle me-2"></i> <%= error %>
      </div>
    <% } %>

    <form id="registerForm" action="/register" method="POST" autocomplete="off" onsubmit="return validatePasswordStrength()">

      <!-- Username -->
      <div class="form-floating mb-3">
        <input type="text" class="form-control" id="username" name="username" placeholder="Username" required>
        <label for="username"><i class="fas fa-user me-2"></i> Username</label>
      </div>

      <!-- Email -->
      <div class="form-floating mb-3">
        <input type="email" class="form-control" id="email" name="email" placeholder="Email" 
          required pattern="[a-zA-Z0-9._%+-]+@gmail\.com" 
          title="Only Gmail addresses are allowed">
        <label for="email"><i class="fas fa-envelope me-2"></i> Email</label>
      </div>

      <!-- Password -->
      <div class="form-floating mb-3 position-relative">
        <input type="password" class="form-control pe-5" id="password" name="password" placeholder="Password" required oninput="checkPasswordStrength()">
        <label for="password"><i class="fas fa-lock me-2"></i> Password</label>
        <span id="togglePassword" class="eye-icon">
          <i class="fas fa-eye" id="eyeIcon"></i>
        </span>
      </div>

      <!-- Strength Bar -->
      <div class="progress mb-2" style="height: 6px;">
        <div id="strengthBar" class="progress-bar" style="width: 0%;"></div>
      </div>
      <div class="form-text text-center mb-2" id="strengthText" style="font-size: 0.9rem;">
        Password strength: <span style="color: #dc3545;">Weak</span>
      </div>

      <!-- Submit -->
      <div class="d-grid mt-3">
        <button type="submit" class="btn btn-primary d-flex align-items-center justify-content-center">
          <span>Register</span>
          <div class="spinner" id="spinner"></div>
        </button>
      </div>

      <!-- Generate Password -->
      <div class="text-center mt-2">
        <small><a href="#" onclick="generatePassword()">Generate Strong Password</a></small>
      </div>
    </form>

    <!-- Login Link -->
    <div class="login-link">
      Already have an account? <a href="/login">Login here</a>
    </div>
  </div>

  <script>
    // Password strength checker
    function checkPasswordStrength() {
      const password = document.getElementById("password").value;
      const strengthBar = document.getElementById("strengthBar");
      const strengthText = document.getElementById("strengthText");
      let strength = 0;

      if (password.length >= 8) strength++;
      if (/[A-Z]/.test(password)) strength++;
      if (/[a-z]/.test(password)) strength++;
      if (/\d/.test(password)) strength++;
      if (/[\W_]/.test(password)) strength++;

      switch (strength) {
        case 0:
        case 1:
          strengthBar.style.width = "20%";
          strengthBar.className = "progress-bar bg-danger";
          strengthText.innerHTML = "Password strength: <span style='color: #dc3545;'>Weak</span>";
          break;
        case 2:
          strengthBar.style.width = "40%";
          strengthBar.className = "progress-bar bg-warning";
          strengthText.innerHTML = "Password strength: <span style='color: #ffc107;'>Moderate</span>";
          break;
        case 3:
          strengthBar.style.width = "60%";
          strengthBar.className = "progress-bar bg-info";
          strengthText.innerHTML = "Password strength: <span style='color: #17a2b8;'>Good</span>";
          break;
        case 4:
        case 5:
          strengthBar.style.width = "100%";
          strengthBar.className = "progress-bar bg-success";
          strengthText.innerHTML = "Password strength: <span style='color: #28a745;'>Strong</span>";
          break;
      }
    }

    // Password toggle
    const togglePassword = document.getElementById("togglePassword");
    const passwordInput = document.getElementById("password");
    const eyeIcon = document.getElementById("eyeIcon");

    togglePassword.addEventListener("click", function () {
      const type = passwordInput.getAttribute("type") === "password" ? "text" : "password";
      passwordInput.setAttribute("type", type);
      eyeIcon.classList.toggle("fa-eye");
      eyeIcon.classList.toggle("fa-eye-slash");
    });

    // Spinner on submit
    document.getElementById("registerForm").addEventListener("submit", () => {
      document.getElementById("spinner").style.display = "inline-block";
    });

    // Generate strong password
    function generatePassword() {
      const charset = "abcdefghijklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ0123456789@#$!";
      let pass = "";
      for (let i = 0; i < 12; i++) {
        pass += charset.charAt(Math.floor(Math.random() * charset.length));
      }
      document.getElementById("password").value = pass;
      checkPasswordStrength();
    }

    // Validate password before submit
    function validatePasswordStrength() {
      const password = document.getElementById("password").value;
      let strength = 0;
      if (password.length >= 8) strength++;
      if (/[A-Z]/.test(password)) strength++;
      if (/[a-z]/.test(password)) strength++;
      if (/\d/.test(password)) strength++;
      if (/[\W_]/.test(password)) strength++;

      if (strength < 3) {
        alert("Password too weak. Use at least 8 characters including uppercase, number and symbol.");
        return false;
      }
      return true;
    }
  </script>
</body>
</html>
