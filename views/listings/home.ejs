<style>
  body {
    font-family: 'Poppins', sans-serif;
    background: linear-gradient(180deg,#f1f4f9,#e0f7fa);
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    position: relative;
  }

  /* Hero Section */
  .hero-section {
    min-height: 80vh;
    display: flex;
    justify-content: center;
    align-items: center;
    background: linear-gradient(135deg, #1d3557, #457b9d);
    color: white;
    text-align: center;
    padding: 3rem 2rem;
    border-radius: 2rem;
    margin: 1rem auto;
    position: relative;
    overflow: hidden;
    animation: fadeIn 1.5s ease forwards;
  }

  .hero-content h1 { font-size: 3rem; margin-bottom: 0.5rem; letter-spacing: 1px; animation: slideInDown 1s ease forwards; }
  .tagline { font-weight: 600; font-size: 1.5rem; margin-bottom: 1rem; letter-spacing: 1.5px; animation: fadeIn 1.5s ease forwards 0.5s; opacity: 0; }
  .subtitle { font-weight: 300; font-size: 1.1rem; max-width: 550px; margin: 0.5rem auto 2rem; opacity: 0.85; animation: fadeIn 1.5s ease forwards 1s; }

  .hero-buttons .btn { font-weight: 600; padding: 0.75rem 2rem; border-radius: 2rem; font-size: 1.1rem; margin: 0 0.5rem; text-decoration: none; transition: all 0.3s ease; transform: translateY(0); }
  .btn-primary { background-color: #f1faee; color: #1d3557; }
  .btn-primary:hover { background-color: #1d3557; color: #f1faee; transform: translateY(-3px); box-shadow: 0 8px 20px rgba(0,0,0,0.2); }
  .btn-secondary { background-color: transparent; border: 2px solid #f1faee; color: #f1faee; }
  .btn-secondary:hover { background-color: #f1faee; color: #1d3557; transform: translateY(-3px); box-shadow: 0 8px 20px rgba(0,0,0,0.2); }

  /* Floating Card Section */
  .floating-card-section { display: flex; justify-content: center; padding: 3rem 1rem 6rem; }
  .card { background: white; border-radius: 1rem; box-shadow: 0 12px 28px rgba(29, 53, 87, 0.15); padding: 2.5rem 3rem; max-width: 450px; text-align: center; animation: float 6s ease-in-out infinite; transition: transform 0.5s ease, box-shadow 0.5s ease; }
  .card h2 { color: #1d3557; margin-bottom: 1rem; font-weight: 700; font-size: 1.9rem; animation: fadeIn 1s ease forwards 0.5s; opacity: 0; }
  .card p { color: #457b9d; font-weight: 400; font-size: 1.1rem; margin-bottom: 2rem; line-height: 1.5; }
  .card:hover { transform: translateY(-10px) scale(1.05); box-shadow: 0 20px 40px rgba(29, 53, 87, 0.35); }

  /* Floating Animation */
  @keyframes float { 0%,100%{transform:translateY(0);} 50%{transform:translateY(-15px);} }
  @keyframes fadeIn { from{opacity:0;} to{opacity:1;} }
  @keyframes slideInDown { from{transform:translateY(-20px);opacity:0;} to{transform:translateY(0);opacity:1;} }

  /* Floating Emojis */
  .floating-emojis span {
    position: absolute;
    font-size: 2rem;
    animation: floatEmoji 8s ease-in-out infinite;
    opacity: 0.8;
  }
  .floating-emojis span:nth-child(1){ top: 15%; left: 10%; animation-delay: 0s; }
  .floating-emojis span:nth-child(2){ top: 25%; left: 80%; animation-delay: 2s; }
  .floating-emojis span:nth-child(3){ top: 50%; left: 20%; animation-delay: 4s; }
  .floating-emojis span:nth-child(4){ top: 65%; left: 75%; animation-delay: 6s; }
  .floating-emojis span:nth-child(5){ top: 30%; left: 40%; animation-delay: 1s; }
  .floating-emojis span:nth-child(6){ top: 55%; left: 60%; animation-delay: 3s; }
  .floating-emojis span:nth-child(7){ top: 70%; left: 30%; animation-delay: 5s; }

  @keyframes floatEmoji {
    0%,100%{ transform: translateY(0) rotate(0deg); }
    50%{ transform: translateY(-25px) rotate(15deg); }
  }
</style>
