<% layout("/layouts/boilerplate") %>
<body>
  <div class="container">
    <h2 class="page-title">Edit Destination: <%= listing.title %></h2>

    <form action="/listings/<%= listing._id %>?_method=PUT" method="POST" class="edit-form">
      <label for="title">Title:</label>
      <input
        type="text"
        id="title"
        name="title"
        value="<%= listing.title %>"
        required
        placeholder="Enter destination title"
      />

      <label for="description">Description:</label>
      <textarea
        id="description"
        name="description"
        required
        placeholder="Enter destination description"
      ><%= listing.description %></textarea>

      <label for="price">Price (USD):</label>
      <input
        type="number"
        id="price"
        name="price"
        value="<%= listing.price %>"
        required
        min="0"
        placeholder="Enter price"
      />

      <label for="location">Location:</label>
      <input
        type="text"
        id="location"
        name="location"
        value="<%= listing.location %>"
        required
        placeholder="Enter location"
      />

      <label for="country">Country:</label>
      <input
        type="text"
        id="country"
        name="country"
        value="<%= listing.country %>"
        required
        placeholder="Enter country"
      />

      <label for="image">Image URL:</label>
      <input
        type="text"
        id="image"
        name="image"
        value="<%= listing.image.url %>"
        placeholder="Enter image URL"
      />

      <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>

    <a href="/listings/<%= listing._id %>" class="back-link">‚Üê Back to Destination</a>
  </div>

  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f9f9f9;
      margin: 0;
      padding: 2rem 0;
      color: #333;
    }

    .container {
      max-width: 700px;
      margin: 0 auto;
      background: white;
      padding: 2.5rem 3rem;
      border-radius: 14px;
      box-shadow: 0 5px 15px rgba(0,0,0,0.12);
    }

    .page-title {
      text-align: center;
      font-size: 2rem;
      font-weight: 700;
      margin-bottom: 2rem;
      color: #2c3e50;
    }

    form.edit-form {
      display: flex;
      flex-direction: column;
      gap: 1.3rem;
    }

    label {
      font-weight: 600;
      margin-bottom: 0.3rem;
      color: #555;
    }

    input[type="text"],
    input[type="number"],
    textarea {
      padding: 0.7rem 1rem;
      font-size: 1.1rem;
      border: 2px solid #ddd;
      border-radius: 8px;
      transition: border-color 0.3s ease;
      resize: vertical;
      font-family: inherit;
    }

    input[type="text"]:focus,
    input[type="number"]:focus,
    textarea:focus {
      border-color: #007BFF;
      outline: none;
    }

    textarea {
      min-height: 120px;
    }

    button.btn-primary {
      margin-top: 1rem;
      background-color: #007BFF;
      color: white;
      font-weight: 700;
      border: none;
      border-radius: 25px;
      padding: 0.8rem 1.8rem;
      font-size: 1.1rem;
      cursor: pointer;
      transition: background-color 0.3s ease;
      align-self: center;
      width: fit-content;
    }

    button.btn-primary:hover {
      background-color: #0056b3;
    }

    .back-link {
      display: inline-block;
      margin-top: 1.8rem;
      text-decoration: none;
      color: #6c757d;
      font-weight: 600;
      font-size: 1rem;
      transition: color 0.3s ease;
    }

    .back-link:hover {
      color: #007BFF;
    }

    @media (max-width: 600px) {
      .container {
        padding: 1.5rem 1.5rem;
      }
    }
  </style>
</body>
