<% layout("/layouts/boilerplate") %>

<body>
  <div class="profile-container">
    <!-- Header -->
    <div class="profile-header d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1 class="title"><i class="fas fa-user-circle me-2"></i>Welcome, <%= user.name %></h1>
        <p class="subtitle">Email: <%= user.email %></p>
      </div>
      <a href="/logout" class="btn btn-outline-danger logout-btn">
        <i class="fas fa-sign-out-alt me-1"></i> Logout
      </a>
    </div>

    <!-- Liked Destinations Section -->
    <div class="liked-section">
      <h2><i class="fas fa-heart text-danger me-2"></i>Your Liked Destinations</h2>
      
      <% if (user.listings && user.listings.length > 0) { %>
        <div class="liked-grid">
          <% user.listings.forEach(destination => { %>
            <a href="/listings/<%= destination._id %>" class="liked-card" title="View <%= destination.title %>">
              <img src="<%= destination.image.url %>" alt="<%= destination.title %>" class="liked-img" />
              <div class="liked-info">
                <h5><%= destination.title %></h5>
                <p><i class="fas fa-map-marker-alt me-1 text-danger"></i> <%= destination.location %>, <%= destination.country %></p>
              </div>
            </a>
          <% }) %>
        </div>
      <% } else { %>
        <p class="empty-msg">ðŸ˜” You haven't liked any destinations yet.</p>
      <% } %>
    </div>
  </div>

  <style>
    body {
      background: linear-gradient(to right, #f0f2f5, #d4eaf7);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      padding: 2rem 1rem;
    }

    .profile-container {
      max-width: 900px;
      margin: auto;
      background: rgba(255, 255, 255, 0.75);
      backdrop-filter: blur(12px);
      border-radius: 20px;
      padding: 2rem 2.5rem;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
    }

    .profile-header .title {
      font-size: 2rem;
      font-weight: bold;
      color: #2c3e50;
    }

    .profile-header .subtitle {
      color: #555;
      font-size: 1.1rem;
      margin-top: 0.3rem;
    }

    .logout-btn {
      font-weight: 600;
      border-radius: 25px;
      padding: 0.5rem 1.4rem;
      transition: all 0.3s ease;
    }

    .logout-btn:hover {
      background-color: #dc3545;
      color: white;
    }

    .liked-section h2 {
      font-size: 1.6rem;
      margin-top: 2rem;
      margin-bottom: 1.2rem;
      color: #007bff;
      border-bottom: 2px solid #007bff;
      padding-bottom: 0.4rem;
    }

    .liked-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
      gap: 1.5rem;
      margin-top: 1rem;
    }

    .liked-card {
      background: white;
      border-radius: 14px;
      overflow: hidden;
      box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
      text-decoration: none;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
      display: flex;
      flex-direction: column;
    }

    .liked-card:hover {
      transform: translateY(-6px);
      box-shadow: 0 12px 25px rgba(0, 0, 0, 0.15);
    }

    .liked-img {
      width: 100%;
      height: 160px;
      object-fit: cover;
    }

    .liked-info {
      padding: 1rem;
    }

    .liked-info h5 {
      font-size: 1.25rem;
      font-weight: 600;
      margin-bottom: 0.4rem;
      color: #2c3e50;
    }

    .liked-info p {
      margin: 0;
      color: #666;
      font-size: 0.95rem;
    }

    .empty-msg {
      text-align: center;
      font-size: 1.2rem;
      color: #777;
      font-style: italic;
      padding: 1.5rem 0;
    }

    @media screen and (max-width: 600px) {
      .profile-container {
        padding: 1.5rem;
      }

      .profile-header {
        flex-direction: column;
        align-items: flex-start;
      }

      .logout-btn {
        margin-top: 1rem;
        width: 100%;
        text-align: center;
      }
    }
  </style>
</body>
