<% layout("/layouts/boilerplate") %>

<section class="d-flex justify-content-center align-items-center" style="padding:100px 20px; min-height:70vh; background: linear-gradient(135deg, #f0f4ff, #d9e4ff);">
  <div class="text-center p-5" style="background:#fff; border-radius:20px; box-shadow:0 10px 30px rgba(0,0,0,0.1); max-width:500px; width:100%; position:relative; overflow:hidden;">
    
    <!-- Animated check mark -->
    <div style="font-size:4rem; color:#6B86FF; margin-bottom:20px; animation: popIn 0.6s ease;">
      &#10003;
    </div>
    
    <h1 class="fw-bold mb-3" style="color:#333; font-size:2rem; animation: fadeInUp 0.6s ease 0.2s forwards; opacity:0;">Thanks, <%= name %>!</h1>
    <p class="mb-4 text-muted" style="font-size:1.1rem; animation: fadeInUp 0.6s ease 0.4s forwards; opacity:0;">
      Your message has been sent successfully. We'll get back to you soon.
    </p>
    
    <a href="/" class="btn fw-bold py-3 px-5 text-white"
       style="background: linear-gradient(90deg, #007bff, #6B86FF); border-radius:12px; font-size:1.1rem; transition: transform 0.2s ease; display:inline-block; animation: fadeInUp 0.6s ease 0.6s forwards; opacity:0;">
      Go Back Home
    </a>
  </div>
</section>

<style>
  @keyframes popIn {
    0% { transform: scale(0); opacity: 0; }
    60% { transform: scale(1.2); opacity: 1; }
    100% { transform: scale(1); }
  }
  @keyframes fadeInUp {
    0% { opacity:0; transform: translateY(20px); }
    100% { opacity:1; transform: translateY(0); }
  }
</style>

<script>
  const btn = document.querySelector('a.btn');
  btn.addEventListener('mouseenter', () => btn.style.transform = 'scale(1.05)');
  btn.addEventListener('mouseleave', () => btn.style.transform = 'scale(1)');
</script>
